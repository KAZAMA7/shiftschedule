<p id="notice"><%= notice %></p>

<h1>Associates</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Irc nick</th>
      <th>Mail</th>
      <th>Phone</th>
      <th>Manager</th>
      <th>Group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @associates.each do |associate| %>
      <tr>
        <td><%= associate.name %></td>
        <td><%= associate.irc_nick %></td>
        <td><%= associate.mail_id %></td>
        <td><%= associate.phone %></td>
        <td><%= associate.manager %></td>
        <td><%= associate.group %></td>
        <td><%= link_to 'Show', associate %></td>
        <td><%= link_to 'Edit', edit_associate_path(associate) %></td>
        <td><%= link_to 'Destroy', associate, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Associate', new_associate_path %>
